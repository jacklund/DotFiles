; vim:ft=dosini

[colors]
  select = #161A1B
  background = #f41C1C1C
  background-alt =     ${self.select}
  foreground = #ccD0D0D0
  alert =                 #F1FA8C
  transparent =       #00000000
  bar-used-0 = #aaff77
  bar-used-1 = #aaff77
  bar-used-2 = #fba922
  bar-used-3 = #ff5555
  bar-used-empty = #444444


[global/wm]
  margin-top = 0
  margin-bottom = 0


[settings]
  throttle-output = 5
  throttle-output-for = 10
  throttle-input-for = 30
  screenchange-reload = true
  bargapp= 10
  barwidth = 100%
  barheight = 40


[bar/top]
  monitor = DP-1
  monitor-strict = true
  fixed-center = true
  bottom = false
  top = true
  width = ${settings.barwidth}
  height = ${settings.barheight}
  offset-x = 0
  offset-y = 0
  background = ${colors.background}
  foreground = ${colors.foreground}
  overline-size = 0
  overline-color = #f00
  underline-size = 2
  underline-color = #00f
  border-top-size = ${settings.bargapp}
  border-left-size = ${settings.bargapp}
  border-right-size = ${settings.bargapp}
  border-bottom-size = 0
  border-color = ${colors.transparent}
  radius-top = 10
  radius-bottom = 10
  spacing = 2
  padding-left = 2
  padding-right = 2
  module-margin-left = 2
  module-margin-right = 2
  font-0 = Monoid:size=10;4
  font-1 = unifont:size=12;1
  font-2 = FontAwesome:size=12;3
  font-3 = NotoSans-Regular:size=12;-1
  font-4 = MaterialIcons:size=16;5
  tray-position = right
  tray-padding = 4
  modules-left = jgmenu  wlan  external-ip bluetooth
  modules-center = weather
  modules-right = light volume date


[bar/bottom]
  width = ${settings.barwidth}
  height = ${settings.barheight}
  clickareas = 35
  override-redirect = false
  bottom = true
  top = false
  monitor = DP-1
  monitor-strict = true
  scroll-up = i3wm-wsnext
  scroll-down = i3wm-wsprev
  background = ${colors.background}
  foreground = ${colors.foreground}
  radius-top = 10
  radius-bottom = 10
  border-top-size = ${settings.bargapp}
  border-left-size = ${settings.bargapp}
  border-right-size = ${settings.bargapp}
  border-bottom-size = 10

  #locale = es_ES.UTF-8

  tray-position = right
  spacing = 2
  padding-left = 2
  padding-right = 2
  module-margin-left = 0
  module-margin-right = 3

  font-0 = Envy Code R:size=12;0
  font-1 = MaterialIcons:size=12;0
  font-2 = FontAwesome:pixelsize=12

  modules-center = i3
  modules-left = cpu memory temperature redshift network
  modules-right =  filesystem


[module/i3]
  type = internal/i3
  format = <label-state> <label-mode>
  pin-workspaces = true
  label-focused = %name%
  label-focused-foreground= ${colors.background}
  label-focused-background = ${colors.foreground}
  label-focused-underline = ${colors.foreground}
  label-focused-padding = 3
  label-unfocused = %name%
  label-unfocused-padding = 2
  label-unfocused-background = ${colors.background}
  label-urgent = %name%
  label-urgent-foreground= ${colors.alert}
  label-urgent-background = ${colors.background-alt}
  label-urgent-padding = 2
  label-empty = %name%
  label-empty-background = ${colors.background-alt}
  label-empty-padding = ${self.label-focused-padding}


[module/external-ip]
  type = custom/script
  exec = ~/bin/ip_status
  interval = 60
  format-foreground = #458588


[module/search]
  type = custom/script
  exec = echo "   search:    "
  interval = 60
  label = %output%
  format = <label>
  format-foreground = ${colors.background}
  format-background = ${colors.foreground}


[module/cpu]
  type = internal/cpu
  interval = 2
  format = <label> <bar-load>
  label =
  label-foreground = #fabd2f
  label-padding = 0

  bar-load-width = 10
  bar-load-foreground-0 = ${colors.bar-used-0}
  bar-load-foreground-1 = ${colors.bar-used-1}
  bar-load-foreground-2 = ${colors.bar-used-2}
  bar-load-foreground-3 = ${colors.bar-used-3}
  bar-load-indicator = |
  bar-load-indicator-foreground = #ff
  bar-load-indicator-font = 3
  bar-load-fill = ─
  bar-load-fill-font = 3
  bar-load-empty = ─
  bar-load-empty-font = 3
  bar-load-empty-foreground = #444444


[module/memory]
  type = internal/memory
  format = <label> <bar-used>
  label = 
  label-foreground = #fabd2f

  bar-used-width = 10
  bar-used-foreground-0 = ${colors.bar-used-0}
  bar-used-foreground-1 = ${colors.bar-used-1}
  bar-used-foreground-2 = ${colors.bar-used-2}
  bar-used-foreground-3 = ${colors.bar-used-3}
  bar-used-indicator = |
  bar-used-indicator-foreground = #ff
  bar-used-indicator-font = 3
  bar-used-fill = ─
  bar-used-fill-font = 3
  bar-used-empty = ─
  bar-used-empty-font = 3
  bar-used-empty-foreground = #444444



[module/temperature]
  type = internal/temperature
  interval = 0.5
  thermal-zone = 0
  warn-temperature = 100
  format = <ramp> <label>
  format-warn = <ramp>
  label-warn-foreground = #f00
  ramp-0 = 
  ramp-1 = 
  ramp-foreground = #55
  label-foreground = ${colors.bar-used-3}
  ramp-0-foreground = ${colors.bar-used-3}
  label =%temperature-f%
  label-warn =xxx%temperature-f%


[module/network]
  type = internal/network
  interface = wlx001f017b0914
  interval = 3.0
  format-connected = <label-connected>
  label-connected =  %upspeed%     %downspeed%

[module/wlan]
  type = internal/network
  interface = wlx001f017b0914
  interval = 3.0
  format-connected = <label-connected>
  label-connected =  %essid%   %signal% %local_ip% 
  label-disconnected = "%{A1:connman-gtk &:}%{A}"
  label-disconnected-foreground = #5b
  ramp-signal-0 = 
  ramp-signal-1 = 
  ramp-signal-2 = 
  ramp-signal-3 = 
  ramp-signal-4 = 
  ramp-signal-foreground = ${colors.foreground}
  format-connected-foreground = #458588


[module/weather]
  type = custom/script
  interval = 10
  format = <label>
  format-prefix = " "
  format-prefix-foreground = ${colors.foreground}
  exec = ~/.config/polybar/weather


[module/bluetooth]
  type = custom/script
  interval = 10
  format = <label>
  format-prefix = " "
  format-foreground = #458588
  exec = ~/bin/list_bt_connections

[module/date]
  type = internal/date
  interval = 1.0
  date = %%{F#d3869b}%a %b %d%%{F-}  %%{F#fabd2f}%r%%{F-}
  label = %date% %time%
  format = <label>
  format-foreground = ${colors.foreground}


[module/volume]
  type = internal/pulseaudio
  format-volume = <ramp-volume><label-volume>
  format-muted = <label-muted>
  format-volume-foreground = ${colors.foreground}
  label-volume = %percentage%
  label-muted =   M
  label-muted-foreground = #aaa
  ramp-volume-0 = 
  ramp-volume-1 = 
  ramp-volume-2 = 
  ramp-headphones-0 = 


[module/light]
  type = internal/backlight
  card = acpi_video0
  enable-scroll = true
  format = <label>
  label =  %percentage%%
  label-foreground = ${colors.foreground}

[module/jgmenu]
  type = custom/text
  content-padding = 2
  content = menu
  click-left = "jgmenu --at-pointer"

[module/filesystem]
  type = internal/fs
  mount-0 = /home
  mount-1 = /var
  mount-2 = /
  interval = 10
  fixed-values = true
  spacing = 4
  format-mounted = <label-mounted>
  format-unmounted = <label-unmounted>
  label-mounted = %mountpoint%: %percentage_used%% of %total%
  label-mounted-foreground = #bf7a29
  label-unmounted = %mountpoint%: not mounted
  label-unmounted-foreground = #bf3f34

[module/redshift]
  type = custom/script
  interval = 5
  exec = ~/.config/polybar/redshift.sh
