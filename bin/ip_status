#!/bin/bash

external_ip=$(curl -s http://ipecho.net/plain; echo)
external_dns=$(dig +noall +answer geekheads.net | awk '{print $5}')

if [[ ${external_ip} == ${external_dns} ]]; then
  echo ${external_ip}
  echo
  echo \#00FF00
else
  echo "${external_ip}/${external_dns}"
  echo
  echo \#FF0000
fi
